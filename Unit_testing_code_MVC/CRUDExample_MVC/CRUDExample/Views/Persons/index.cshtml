@model IEnumerable<PersonResponse>
@{
    ViewBag.Title = "Persons";
    ViewBag.SortOrder = @ViewBag.CurrentSortOrder;
}

<form action="~/persons/index" method="get">
    <p>Persons</p>
    <div class="box flex">
        <div class="flex-1">
            <select name="searchBy" id="" class="form-input">
                @foreach (var field in ViewBag.SearchFields)
                {
                    if (field.Key == @ViewBag.CurrentSearchBy)
                    {
                        <option value="@field.Key" selected="selected">@field.Value</option>
                    }
                    else
                    {
                        <option value="@field.Key">@field.Value</option>
                    }
                }
                @* searchBy=personName&searchString=abc *@
            </select>
        </div>
        <div class="flex-1">
            <input type="search" name="searchString" value="@ViewBag.CurrentSearchString" placeholder="search">
        </div>
        <div class="flex-1">
            <button class="button button-blue-back">Search</button>
            <a href="~/persons/index" class="link-hover">Clear all</a>
        </div>
    </div>
    <table class="table">
        <thead>
            @if (ViewBag.SortOrder.ToString() == SortOrderOptions.ASC.ToString())
            {
                ViewBag.SortOrder = SortOrderOptions.DESC;
            }
            else
            {
                ViewBag.SortOrder = SortOrderOptions.ASC;
            }
            <tr>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.PersonName)&sortOrder=@ViewBag.SortOrder">Person
                        Name</a>
                    <i class="fas fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.Email)&sortOrder=@ViewBag.SortOrder">Email</a>
                    <i class="fas fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.DateOfBirth)&sortOrder=@ViewBag.SortOrder">Date
                        Of Birth</a>
                    <i class="fa-solid fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.Age)&sortOrder=@ViewBag.SortOrder">Age</a>
                    <i class="fas fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.Gender)&sortOrder=@ViewBag.SortOrder">Gender</a>
                    <i class="fas fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.CountryID)&sortOrder=@ViewBag.SortOrder">Country</a>
                    <i class="fas fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.Address)&sortOrder=@ViewBag.SortOrder">Address</a>
                    <i class="fas fa-sort-up"></i>
                </th>
                <th>
                    <a
                        href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@nameof(PersonResponse.ReceiveNewsLetters)&sortOrder=@ViewBag.SortOrder">Receive
                        News Letters</a>
                    <i class="fas fa-sort-up"></i>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.Email</td>
                    <td>@person.DateOfBirth</td>
                    <td>@person.Age</td>
                    <td>@person.Gender </td>
                    <td>@person.CountryID</td>
                    <td>@person.Address</td>
                    <td>@person.ReceiveNewsLetters</td>
                </tr>
            }
        </tbody>
    </table>
</form>